<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="@color/backgroundColor">

    <!-- Title: Add Movie -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Movie Details"
        android:textSize="24sp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Movie Name Input -->
    <EditText
        android:id="@+id/movieName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Movie Name"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:backgroundTint="@color/focusColor"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Movie Theatre Input -->
    <EditText
        android:id="@+id/movieTheatre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Movie Theatre"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:backgroundTint="@color/focusColor"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Movie Cost Input -->
    <EditText
        android:id="@+id/movieCost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Cost"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/focusColor"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/buttonColor"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Success/Failure Message -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/successColor"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- View Movie Details Button -->
    <Button
        android:id="@+id/viewDetailsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Movie Details"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/accentColor"
        android:textSize="18sp" />
</LinearLayout>
